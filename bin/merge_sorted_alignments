import os
import sys
import site
SealDir = os.path.realpath( os.path.join( os.path.dirname( os.path.realpath(sys.argv[0]) ), "..") )
site.addsitedir(SealDir)

import bl.lib.tools.hadut as hadut

def jar_path():
	return hadut.find_seal_jar(SealDir)

def main():
	hadut.run_class_e("it.crs4.seal.read_sort.MergeSortedAlignments", jar_path(), None, sys.argv[1:])

if __name__ == "__main__":
  main()
