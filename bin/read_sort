# Driver for the read_sort hadoop program.
# For usage instructions run ./read_sort --help

import os
import sys
import site
SealDir = os.path.realpath( os.path.join( os.path.dirname( os.path.realpath(sys.argv[0]) ), "..") )
site.addsitedir(SealDir)

import bl.lib.tools.hadut as hadut


def jar_path():
	return hadut.find_seal_jar(
			os.path.join( 
				os.path.dirname( os.path.realpath(sys.argv[0]) ),
				".."))

def main():
	print >>sys.stderr, "Using hadoop executable %s" % hadut.hadoop

	properties = dict()
	properties['mapred.compress.map.output'] = "true"

	hadut.run_class("it.crs4.seal.read_sort.ReadSort", jar_path(), properties=properties, args_list=sys.argv[1:])


if __name__ == "__main__":
  main()
